<%= render "layouts/user-panel" %>
<div class="main content">
    <div class="container">
        <h4>My activity</h4>

        <ul class="collapsible" data-collapsible="accordion">
            <li>
                <div class="collapsible-header active"><i class="material-icons">whatshot</i>Crime reports</div>
                <div class="collapsible-body">
                    <span>
                        <table class="tablesorter">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Address</th>
                                    <th>Details</th>
                                    <th>Image</th>
                                    <th colspan= "3"></th>
                                </tr>
                            </thead>

                            <tbody>
                                <% @reports.each do |report| %>
                                <tr>
                                    <td><%= report.fecha.to_date %></td>
                                    <td  class="dates"><%= report.address %></td>
                                    <td class="xdetails_content"><%= report.details %></td>
                                    <td>
                                        <% if !report.images[0].nil? %>
                                        <img src="<%=asset_path( report.images[0] )%>">
                                        <%end %>
                                    </td>
                                    <td><%= link_to 'Show', report, class: "bontonnormal" %></td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </span>
                </div>
            </li>
            <li>
                <div class="collapsible-header"><i class="material-icons">person_pin</i>Suspect reports</div>
                <div class="collapsible-body">
                    <span>
                        <table>
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Address</th>
                                    <th>Details</th>
                                    <th>Image</th>
                                    <th colspan="3"></th>
                                </tr>
                            </thead>

                            <tbody>
                                <% @suspects.each do |suspect| %>
                                <tr>
                                    <td><%= suspect.fecha.to_date %></td>
                                    <td><%= suspect.address %></td>
                                    <td class="xdetails_content"><%= suspect.details %></td>
                                    <td>
                                        <% if !suspect.images[0].nil? %>
                                        <img src="<%=asset_path( suspect.images[0] )%>">
                                        <%end %>
                                    </td>
                                    <td><%= link_to 'Show', suspect, class: "bontonnormal" %></td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </span>
                </div>
            </li>
            <li>
                <div class="collapsible-header"><i class="material-icons">directions</i>Routes</div>
                <div class="collapsible-body">
                    <span>
                        <table>
                            <thead>
                                <tr>
                                    <th>Creation Date</th>
                                    <th>Route</th>
                                    <th>Mode</th>
                                    <th colspan="2"></th>
                                </tr>
                            </thead>

                            <tbody>
                                <% @routes.each do |route| %>
                                <tr>
                                    <td><%= route.date.to_date %></td>
                                    <td><%= route.route %></td>
                                    <td><%= route.mode %></td>
                                    <td><%= link_to 'Show', route, class: "bontonnormal" %></td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </span>
                </div>
            </li>
        </ul>


    </div>
</div>
