$('#suspects').append('<%= j render @suspects %>');
<% if @suspects.next_page %>  
  $('.paginationsu').replaceWith('<%= j will_paginate @suspects,:class =>"paginationsu" %>');
<% else %>  
  $(window).off('scroll');
  $('.paginationsu').remove();
<% end %> 

