<%= render "layouts/user-panel" %>

<div class="main content">
    <div class="container">
        <p id="notice"><%= notice %></p>

        <p>
          <strong>Nombre:</strong>
          <%= @suspect.nombre %>
        </p>

        <p>
          <strong>Fecha:</strong>
          <%= @suspect.fecha %>
        </p>

       <img async defer src = "https://maps.googleapis.com/maps/api/streetview?size=300x300&location=<%=@suspect.latitude%>,<%=@suspect.longitude%>&heading=151.78&pitch=-0.76&key=AIzaSyBSx0bimXEZW2pCJQwXposaNJJll96JQ4g"></img>
         <div>
                                   <div >
                                     <%= avatar_for(@suspect.user,size: 35)%>
                                   </div> 
                                <%=link_to "@"+@suspect.user.username, user_path(@suspect.user.id)%>
                                
                              </div>

        <p>
          <strong>Address:</strong>
          <%= @suspect.address %>
        </p>

        <p>
          <strong>Details:</strong>
          <%= @suspect.details %>
        </p>
        <% if @suspect.user!= nil  && current_user?(@suspect.user) %>
         <%= link_to 'Edit', edit_suspect_path(@suspect) , class: "btn custom_margin" %> |
         <%end%>
        <%= link_to 'Back', user_panel_path, class: "btn custom_margin" %>
        <!--, locals: {commentable: @suspect}-->
        
         <%= render  "comments/comment" %>
         <%= render  "comments/form" %>
       </div>
       

    </div>
</div>
