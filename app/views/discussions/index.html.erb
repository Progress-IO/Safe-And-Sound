
<script>jQuery(document).ready(function($) {
  $(".clickable-row").click(function() {
  window.location = $(this).data("href");
  });
}); </script>

<div class = "container">

<div>
  <h1>Discussions</h1>
  <% if user_signed_in?%>
<%= link_to 'New Discussion', new_discussion_path, class:"waves-effect waves-light btn" %>
  <% end %>
</div>
<table class="highlight">
  <thead>
    <tr>
      <th>Headline</th>
      <th>User</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discussions.each do |discussion| %>
     
      <tr >
        <td><%= discussion.headline%></td>
        <td><%= discussion.user.email %></td>
        <td><i><%= discussion.created_at %></i></td>
      <!--  <td></td>-->
        <td><%= link_to 'Show', discussion, class: "bontonnormal"%></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_discussion_path(discussion), class: "bontonnormal" %></td>
        <td><%= link_to 'Destroy', discussion, method: :delete, data: { confirm: 'Are you sure?' }, class: "bontonnormal" %></td>
        <% end %>
      </tr>
  
    <% end %>
  </tbody>
</table>




<br></br>
<div><%= will_paginate @discussions ,previous_label: "Back", next_label: "Next" %></div>
</div>