<p id="notice"><%= notice %></p>
<div>
<h1>Discussions</h1><%= link_to 'New Discussion', new_discussion_path, class:"waves-effect waves-light btn" %>
</div>
<table class="highlight">
  <thead>
    <tr>
      <th>Headline</th>
      <th>User</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discussions.each do |discussion| %>
      
      <tr>
        <td><%= discussion.headline%></td>
        <td><%= discussion.user.email %></td>
        <td><%= discussion.created_at %></td>
      <!--  <td></td>-->
        <td><%= link_to 'Show', discussion%></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_discussion_path(discussion) %></td>
        <td><%= link_to 'Destroy', discussion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
      
    <% end %>
  </tbody>
</table>




<br></br>
<div><%= will_paginate @discussions ,previous_label: "Back", next_label: "Next" %></div>
