<%= render "layouts/user-panel" %>
<div class="main content">
    <div class="container">
        <table class="striped">
            <p id="notice"><%= notice %></p>

            <tr>
                <th>Fecha</th>
                <td><%= @report.fecha.to_date %></td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td><%= @report.tipo %></td>
            </tr>
            <tr>
                <th>Dirección</th>
                <td><%= @report.address %></td>
            </tr>
            <tr>
                <th>Detalles</th>
                <td><%= @report.details %></td>
            </tr>
            <tr>
                <th>Tipo de transporte</th>
                <td><%= @report.tipo_transp %></td>
            </tr>
        </table>

        <div class="img_container">
            <% @report.images.each do |image|%>
            <% if !image.nil? %>
            <img src="<%=asset_path( image.large )%>" class="img_prev materialboxed">
            <% end %>
            <% end %>
        </div>
       <b> Calificación  :</b> <%= rating_for @report, 'calificacion' , enable_half: true  %>
       <%= link_to user_panel_path, class: "btn-floating btn-large waves-effect waves-light dark-grey" do %>
            <i class="material-icons">arrow_back</i>
        <% end %>
        
        |
        <%= link_to edit_report_path(@report), class: "btn-floating btn-large waves-effect waves-light green" do %>
            <i class="material-icons">create</i>
        <% end %>
        |
        

        <%= link_to  report_path(@report, :format => 'pdf'), class: "btn-floating btn-large waves-effect waves-light red" do %>
            <i class="material-icons">picture_as_pdf</i>
        <% end %>

        <%= render  "comments/comment"%>
        <%= render  "comments/form" %>
    </div>

</div>
