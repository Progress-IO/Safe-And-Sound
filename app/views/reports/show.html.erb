<%= render "layouts/user-panel" %>
<div class="main content">
    <div class="container">
        <p id="notice"><%= notice %></p>

       
          <strong>Fecha:</strong>
          <%= @report.fecha %>
        </p>

        <p>
          <strong>Tipo:</strong>
          <%= @report.tipo %>
        </p>
    
        <img async defer src = "https://maps.googleapis.com/maps/api/streetview?size=300x300&location=<%=@report.latitude%>,<%=@report.longitude%>&heading=151.78&pitch=-0.76&key=AIzaSyBSx0bimXEZW2pCJQwXposaNJJll96JQ4g"></img>
         <div>
                                   <div >
                                     <%= avatar_for(@report.user,size: 35)%>
                                   </div> 
                                <%=link_to "@"+@report.user.username, user_path(@report.user.id)%>
                                
                              </div>
        <p>
          <strong>Address:</strong>
          <%= @report.address %>
        </p>

        <p>
          <strong>Details:</strong>
          <%= @report.details %>
        </p>
        <% if @report.user!= nil  && current_user?(@report.user) %>
        <%= link_to 'Edit', edit_report_path(@report), class: "btn custom_margin" %> |
        <%end%>
        <%= link_to 'Back', user_panel_path, class: "btn custom_margin" %>
        
        
        <%= render  "comments/comment"%>
        <%= render  "comments/form" %>
    </div>

</div>
