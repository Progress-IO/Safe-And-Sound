<%= render "layouts/user-panel" %>
<div class="main content">
    <div class="container">
        <p id="notice"><%= notice %></p>

       
          <strong>Fecha:</strong>
          <%= @report.fecha %>
        </p>

        <p>
          <strong>Tipo:</strong>
          <%= @report.tipo %>
        </p>

        <p>
          <strong>Latitude:</strong>
          <%= @report.latitude %>
        </p>

        <p>
          <strong>Longitude:</strong>
          <%= @report.longitude %>
        </p>

        <p>
          <strong>Address:</strong>
          <%= @report.address %>
        </p>

        <p>
          <strong>Details:</strong>
          <%= @report.details %>
        </p>

        <%= link_to 'Edit', edit_report_path(@report), class: "btn custom_margin" %> |
        <%= link_to 'Back', user_panel_path, class: "btn custom_margin" %>
        
        <h3>Comentarios:</h3>
        <% @report.comments.each do |comment|%>
        <div class="divider"></div>
          <div class="section">
            <h5> <%=comment.user.username%></h5>
            <p><%=comment.body%></p>
          </div>
        
        <%end%>
    </div>

</div>
