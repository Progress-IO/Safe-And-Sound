<div class="container">
    <p id="notice"><%= notice %></p>


    <h1>My reports</h1>

    <table>
      <thead>
        <tr>
          <th>Fecha</th>
          <th>Tipo</th>
          <th>Latitude</th>
          <th>Longitude</th>
          <th>Address</th>
          <th>Details</th>
          <th>Image</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @reports.each do |report| %>
          <tr>
            <td><%= report.fecha %></td>
            <td><%= report.tipo %></td>
            <td><%= report.latitude %></td>
            <td><%= report.longitude %></td>
            <td><%= report.address %></td>
            <td><%= report.details %></td>
            <td><img src="<%=asset_path( report.images[0] )%>"></td>
            <td><%= link_to 'Show', report %></td>
            <td><%= link_to 'Edit', edit_report_path(report) %></td>
            <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Report', new_report_path , class: "btn custom_margin"%>
</div>
